@{
    ViewData["Title"] = "Restaurant_MonTrangMieng_Delete";
}
@model MontrangmiengViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xóa</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <style>
        .container {
            margin-top: 50px;
        }
        .table {
            width: 50%;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Xác nhận xóa món @Model.Id</h2>
        <div>
            <h4>Bạn có chắc chắn muốn xóa món này?</h4>
            <dl class="row">
                <dt class="col-sm-2">Tên set</dt>
                <dd class="col-sm-10">@Model.TenMon</dd>

                <dt class="col-sm-2">Giá</dt>
                <dd class="col-sm-10">@Model.Gia</dd>

                <dt class="col-sm-2">Đường dẫn ảnh</dt>
                <dd class="col-sm-10">@Model.Img người</dd>
            </dl>

            <form method="post" asp-action="Buffet_Delete_Conf">
                <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                <div class="btn-group">
                    <input type="submit" value="Xóa" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa món này?')" />
                    <a href="@Url.Action("Restaurant_MonTrangMieng_Index", "admin")" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
