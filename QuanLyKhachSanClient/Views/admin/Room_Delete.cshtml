@{
    ViewData["Title"] = "ChiTietPhong_Delete";
}
@model Chitietphong
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xóa</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <style>
        .container {
            margin-top: 50px;
        }
        .table {
            width: 50%;
            margin: auto;
        }
    </style>
</head>
<body>
<div class="container">
    <h4>Bạn có chắc chắn muốn xóa phòng này?</h4>
    <dl class="row">
        <dt class="col-sm-2">Mã Loại Phòng</dt>
        <dd class="col-sm-10">@Model.IdPhong</dd>

        <dt class="col-sm-2">Tên Phòng</dt>
        <dd class="col-sm-10">@Model.TenPhong</dd>

        <dt class="col-sm-2">Sức chứa tối đa</dt>
        <dd class="col-sm-10">@Model.NguoiMax người</dd>

        <dt class="col-sm-2">Loại Giường</dt>
        <dd class="col-sm-10">@Model.LoaiGiuong</dd>

        <dt class="col-sm-2">Giá Phòng</dt>
        <dd class="col-sm-10">@Model.GiaPhong</dd>

        <dt class="col-sm-2">Diện Tích</dt>
        <dd class="col-sm-10">@Model.DienTich</dd>

        <dt class="col-sm-2">Mô Tả</dt>
        <dd class="col-sm-10">@Model.Mota</dd>
    </dl>
    <form method="post" asp-action="Room_Delete_Conf">
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
        <div class="btn-group">
            <input type="submit" value="Xóa" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa phòng này?')" />
            <a href="@Url.Action("Room_Index", "admin")" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
